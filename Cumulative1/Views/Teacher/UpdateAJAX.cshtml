@model Cumulative1.Models.Teacher
@{
    ViewBag.Title = "UpdateAJAX";
}

<div>
    <nav>
        <a href="Teacher/List">Back To Teachers</a>
    </nav>

    <h2>Update @Model.TeacherFname @Model.TeacherLname</h2>
    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="teacherFname" name="teacherFname" />
    </div>
    <div>
        <label for="teacherLname">Last Name:</label>
        <input type="text" id="teacherLname" name="teacherLname" />
    </div>
    <div>
        <label for="teacherId">Teacher ID:</label>
        <input type="text" id="teacherId" name="teacherId" />
    </div>
    <div>
        <label for="employeeNo">Employee Number:</label>
        <input type="text" id="employeeNo" name="employeeNo" />
    </div>
    <div>
        <label for="hireDate">Hire Date:</label>
        <input type="text" id="hireDate" name="hiredate" />
    </div>
    <div>
        <label for="salary">Salary:</label>
        <input type="text" id="salary" name="salary" />
    </div>
    <button onclick="UpdateTeacher(@Model.TeacherId);">Update Teacher</button>
</div>

